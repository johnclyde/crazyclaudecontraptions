{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/exam-data",
        "function": "exam-data"
      },
      {
        "source": "/api/exams",
        "function": "exams"
      },
      {
        "source": "/api/login",
        "function": "login"
      },
      {
        "source": "/api/logout",
        "function": "logout"
      },
      {
        "source": "/api/notifications",
        "function": "user_notifications"
      },
      {
        "source": "/api/mark-notification-read",
        "function": "mark_notification_read"
      },
      {
        "source": "/api/user-progress",
        "function": "user_progress"
      },
      {
        "source": "/api/user",
        "function": "get_user_info"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
